{
    "env": {
        "browser": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "GM": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
              "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "off"
        ]
    }
}
